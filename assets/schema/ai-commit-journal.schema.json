{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CommitSmith AI Commit Journal",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "current": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "meta": {
      "type": "object",
      "default": {},
      "additionalProperties": true,
      "properties": {
        "ticketFromBranch": {
          "type": "boolean"
        },
        "scope": {
          "type": "string"
        },
        "style": {
          "type": "string"
        },
        "ticket": {
          "type": "string"
        }
      }
    }
  },
  "required": ["current"]
}
